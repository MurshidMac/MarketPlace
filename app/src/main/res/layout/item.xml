<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivItemImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        app:srcCompat="@android:drawable/ic_menu_camera"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivItemImage"
        android:layout_toRightOf="@+id/ivItemImage"
        android:text="Item Name"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvItemName"
        android:layout_toEndOf="@+id/ivItemImage"
        android:layout_toRightOf="@+id/ivItemImage"
        android:layout_marginBottom="5dp"
        android:text="Seller Name" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:text="$$"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvTimeAgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvSeller"
        android:layout_alignStart="@+id/tvSeller"
        android:layout_below="@+id/tvSeller"
        android:text="Time Ago Posted" />

    <ImageButton
        android:id="@+id/ibFavoriteOn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvPrice"
        android:layout_alignRight="@+id/tvPrice"
        android:layout_alignEnd="@+id/tvPrice"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageButton
        android:id="@+id/ibFavoriteOff"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@android:drawable/btn_star_big_off"
        android:clickable="true"
        android:layout_below="@+id/tvPrice"
        android:layout_alignRight="@+id/tvPrice"
        android:layout_alignEnd="@+id/tvPrice" />

</RelativeLayout>
