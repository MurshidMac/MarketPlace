<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gabbygiordano.marketplace">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <uses-permision android:name="android.permission.CAMERA"/>
    <uses-permision android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permision android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permision android:name="android.permission.MEDIA_CONTENT_CONTROL"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".ParseApplication"
        android:allowBackup="true"
        android:icon="@drawable/homeicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SignUpActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".AddItemActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".NotificationsActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".ItemDetailsActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".InboxActivity" />
        <activity android:name=".ChatActivity"></activity>
    </application>

</manifest>